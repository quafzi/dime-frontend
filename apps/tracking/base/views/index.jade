extends ../../../home/base/views/index

block title
    title Your Activities

block main
  ul(data-ng-controller="TrackingCtrl", class="tracking")
    li(
      data-ng-repeat="activity in activities"
    )
      h4 {{activity.description}}
        span.tags
      .relations
        .row
          .span2
            .icon-user
            | {{activity.customer.name}}
          .span2
            .icon-folder-open
            | {{activity.project.name}}
          .span2
            .icon-cog
            | {{activity.service.name}}
      .timeslices
        .row(
          data-ng-repeat="timeslice in activity.timeslices"
        )
          .span1
            &nbsp;
          .span4.date
            //| {{ timeslice.duration | formatDuration }}
            | ({{timeslice.started_at | date:'medium' }}
            |  - {{timeslice.stopped_at | date:'medium' }})
          .span1
            i.icon-remove(data-ng-click="timeslice.del")
